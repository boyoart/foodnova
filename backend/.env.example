# Database - supports both PostgreSQL and SQLite
DATABASE_URL=sqlite:///./foodnova.db

# JWT Configuration
JWT_SECRET=change_this_secret_in_production_to_a_long_random_string
JWT_ACCESS_EXPIRES_MIN=30
JWT_REFRESH_EXPIRES_DAYS=7

# Admin Credentials (for initial seed)
ADMIN_EMAIL=admin@foodnova.com
ADMIN_PASSWORD=Admin123!

# CORS
FRONTEND_ORIGIN=http://localhost:3000

# File Uploads
UPLOAD_DRIVER=local
UPLOAD_DIR=./uploads
MAX_UPLOAD_MB=10
